#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
     long int n;
      cin>>n;
     long int arr[n];
      for(int i=0;i<n;i++)
        cin>>arr[i];
    long int m=0;
    for(int i=0;i<n;i++)
    {
            m+=arr[i];
    }
   cout<<m-n+1<<endl;

    }
   return 0;
}
