#include <bits/stdc++.h>
using namespace std;
typedef int long long ll;
int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    ll n;
	    ll med=0;
	    cin>>n;
	   ll a[n];
	   for(ll i=0;i<n;i++){
	       cin>>a[i];
	       
	   }
	   ll x = sizeof(a)/sizeof(a[0]);
	   sort(a,a+x);
	   for(ll i=0;i<=n;i++){
	       med = abs(a[n/2]-a[n/2-1]);
	   }
	   cout<<med<<endl;
	   
	}
	return 0;
}
